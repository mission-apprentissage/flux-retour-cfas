<mjml>
  <%- include('./common/head.ejs'); %>

    <mj-body background-color="#f9fafc">
      <%- include('./common/header.ejs'); %>
        <mj-wrapper padding="10px 20px">
          <mj-section background-color="#ffffff" padding-top="0">
            <mj-column>
              <mj-text>
                Bonjour,
              </mj-text>
              <mj-text>
                L'utilisateur <strong><%= data.user.civility %> <%= data.user.prenom %> <%= data.user.nom %> (<%= data.user.email %>)</strong> souhaite accéder à l'organisation <%= data.organisationLabel %>.
              </mj-text>

              <mj-button href="<%= utils.getPublicUrl(`/admin/users/${data.user._id}`) %>" background-color="#0e4194" color="white">
                Voir la fiche de l'utilisateur
              </mj-button>

              <%- include('./common/signature.ejs'); %>
            </mj-column>
          </mj-section>
        </mj-wrapper>
      <%- include('./common/footer.ejs'); %>
    </mj-body>
</mjml>
