  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server: Debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/server",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/$KNOWN_TOOLS$/**"
      ],
    },
    {
      "name": "Ui: Debug Server-Side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/ui",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/$KNOWN_TOOLS$/**"
      ],
    },
  ]
}
