{
  "extends": ["next", "next/core-web-vitals"],
  "rules": {
    "react-hooks/exhaustive-deps": 0
  },
  "overrides": [
    {
      "files": "*.js",
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ],
  "parserOptions": {
    "project": "ui/tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "ui/tsconfig.json"
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
