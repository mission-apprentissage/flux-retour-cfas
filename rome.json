{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": ["ui/.next"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noAsyncPromiseExecutor": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "off"
      }
    }
  }
}
